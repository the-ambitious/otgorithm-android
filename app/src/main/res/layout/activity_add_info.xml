<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/add_info_content">

    <!-- 커스텀 툴바 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/custom_toolbar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <!--&lt;!&ndash; 정보 소개 &ndash;&gt;
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="추가정보 입력"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_desc"
                android:textSize="16sp" />
        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:paddingTop="16dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="자신을 대표할 수 있는\n코디룩을 올려주세요!" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/signup_profile_default" />


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/profile_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:clickable="true"
                    android:src="@drawable/ic_photo_camera_black_24dp"
                    app:fabSize="mini"
                    app:layout_anchor="@id/user_image"
                    app:borderWidth="0dp"
                    android:backgroundTint="@android:color/white"
                    app:layout_anchorGravity="bottom|right|end" />

            </FrameLayout>
        </LinearLayout>

        <!-- 닉네임 입력란 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:weightSum="10">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="닉네임"
                    android:inputType="textPersonName"
                    android:maxLength="10" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>

            <Button
                android:id="@+id/check_duplication"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:text="중복확인"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
        </LinearLayout>
        <!-- 닉네임 입력란 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:text="본인의 출격 지역을 선택해주세요."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:text="한번 선택하면 변경할 수 없으니 신중하게!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinner_location"
                android:layout_width="100dp"
                app:ms_text_color="@android:color/black"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!-- 소개 입력란 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tie_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="간단한 소개"
                    android:inputType="textMultiLine"
                    android:maxLength="40" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="16"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:paddingBottom="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkbox_terms"
                            android:button="@android:color/transparent"
                            android:background="@drawable/checkbox"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            android:paddingLeft="8dp"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="서비스 이용약관(필수)"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/details_terms"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button"
                        android:textColor="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:onClick="detailsOnClick"
                        android:text="상세보기"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:paddingTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_privacy"
                        android:button="@android:color/transparent"
                        android:background="@drawable/checkbox"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:paddingLeft="8dp"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="개인정보 수집 이용(필수)"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/details_privacy"
                        android:background="@drawable/button"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:onClick="detailsOnClick"
                        android:text="상세보기"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

