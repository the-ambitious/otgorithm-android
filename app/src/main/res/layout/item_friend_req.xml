<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_req_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/friend_req_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="9dp"
            android:text="id: userId"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/friend_req_accept"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/friend_req_id"
            android:layout_below="@+id/friend_req_id"
            android:textSize="14sp"
            android:text="수락"
            android:textColor="#FFFFFF"
            android:background="@drawable/button"/>

        <Button
            android:id="@+id/friend_req_decline"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_alignRight="@+id/friend_req_accept"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/friend_req_id"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_cancel"
            android:text="거절"
            android:textColor="@android:color/black"
            android:textSize="14sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>